@model TransacaoModel


<h3>Registrar Tramsação</h3>

@{
    var vDescricao = "";
    var vTipo = "";
    var vValor = 0;
    var vId = 0;
    var vData = "";

    try
    {
        vId = int.Parse(ViewBag.Registro.Id.ToString());
        vDescricao = ViewBag.Registro.Descricao.ToString();
        vTipo = ViewBag.Registro.Tipo.ToString();
    }
    catch
    {

    }

}


<form asp-controller="Transacao" asp-action="Registrar">
    <input type="hidden" asp-for="Id" value="@vId" />

    <div class="form-group">
        <label>Data:</label>
        <input type="date" class="form-control" asp-for="Data" value="@vData" />
        <span asp-validation-for="date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Descrição:</label>
        <input type="text" class="form-control" asp-for="Descricao" value="@vDescricao" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Tipo:</label>

        @{

            if (vTipo == "R")
            {
                <div class="radio">
                    <label>
                        <input type="radio" class="form-control" asp-for="Tipo" value="R" checked>Receita
                    </label>
                </div>

                <div class="radio">
                    <label>
                        <input type="radio" class="form-control" asp-for="Tipo" value="D" unchecked>Despesa
                    </label>
                </div>
            }
            else
            {

                <div class="radio">
                    <label>
                        <input type="radio" class="form-control" asp-for="Tipo" value="R" unchecked>Receita
                    </label>
                </div>

                <div class="radio">
                    <label>
                        <input type="radio" class="form-control" asp-for="Tipo" value="D" checked>Despesa
                    </label>
                </div>
            }
        }

    </div>

    <div class="form-group">
        <label>Valor:</label>
        <input type="Number" class="form-control" asp-for="Valor" value="@vValor" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Histórico:</label>
        <textarea rows="5" class="form-control" asp-for="Descricao">@vDescricao</textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Conta:</label>
        <select asp-for="Conta_Id" name="">
            <option value="1">Volvo</option>

        </select>
    </div>

    <div class="form-group">
        <label>Plano de Contas:</label>
        <select asp-for="Plano_Contas_Id" name="">
            <option value="1">Volvo</option>

        </select>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>

</form>

